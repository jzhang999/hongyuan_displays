<view class="btn">
  <!-- <button class="cat_search" bindtap="handleTap_cat"><text class='cat_search_text'>按类别查找</text></button> -->
  <button class="prod_search" bindtap="handleTap_prod"><text class='prod_search_text'>按产品查找</text></button>
</view>

<view>
  <text class="rec"> 本 期 推 荐 </text>
</view>

<view class="line"></view>

<!-- recommendation part -->
<view class="product">
  <view wx:for="{{items}}" wx:if="{{index < 3}}">
    <view class="pics">
      <image bindtap="goDetail" data-id="{{item['id']}}" src = "http://127.0.0.1:5000/static/uploaded_files/{{item['pic_name0']}}" mode="aspectFit"></image>
    </view>
    <view class="desc">
      <view><text>{{item["product_name"]}}</text></view>
      <!-- <view><text>产品分类: {{item["category"]}}</text></view> -->
    </view>
  </view>

  <view>
    <view class="pics">
      <image bindtap="handleTap_more" src = "../static/more.png" mode="aspectFit"></image>
    </view>
    <view class="desc">
      <view><text> 更多 </text></view>
    </view>
  </view>
</view>

<!-- category part -->
<view class="line"></view>
<view>
  <text class="cat"> 产 品 分 类 </text>
</view>
<view class="line"></view>

<view class="category">
  <view wx:for="{{cat_objs}}" wx:if="{{index < 7}}">
    <view class="icons">
      <image bindtap="goCategory" data-id="{{item['cat_name']}}" src = "http://127.0.0.1:5000/static/uploaded_files/{{item['cat_icon_name']}}" mode="aspectFit"></image>
    </view>
    <view class="icon_name">
      <view><text>{{item["cat_name"]}}</text></view>
    </view>
  </view>

  <!-- More icon -->
  <view>
    <view class="icons">
      <image bindtap="goDetail" data-id="{{item['id']}}" src = "../static/more.png" mode="aspectFit"></image>
    </view>
    <view class="icon_name">
      <view><text> 更多 </text></view>
    </view>
  </view>
</view>

