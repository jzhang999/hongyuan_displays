.rec {
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 600;
  font-size: larger;
  margin-bottom: 23rpx;
  margin-top: 23rpx;
  color: rgb(85, 84, 84);
}

.product {
  flex-direction:row;
  display: grid;
  grid-template-columns: repeat(2, 1fr);
}

.line{
  width:100%;
  height:2rpx; 
  background:#aaa;
}

.desc {
  padding: 8px;
  margin-bottom: 30rpx;
  font-weight: 400;
  font-size: small;
  color: grey;
}

.pics {
  display: flex;
  flex-direction: row;
  justify-content: center; 
  align-items: center;
  background-color: white;
}

.pics image{
  width: 250rpx;
  height: 250rpx;
}